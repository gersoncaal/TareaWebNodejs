</head>
<body>
    <ul class="menu">
    <div class="menu-izquierdo">
    <h5>Gerson Anibal Caal Ico</h5>
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Nosotros</a></li>
    <li><a href="#">Contacto</a></li>
    <li><a href="#">Sub Menu <i class="fas fa-caret-down"></i></a></li>
    <li><a href="#">Ubicacion</a></li>
  </div>
  <div class="menu-derecho">
    <li><a href="#"><i class="fas fa-sign-in-alt"></i>Iniciar</a></li>      
    <li><a href="#"><i class="fas fa-sign-out-alt"></i>Cerrar</a></li> 
    </ul>
  </div>
    <br>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">NUEVO</button>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title" id="exampleModalLabel">Date del Estudiante</h4>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/crud_e" method="post">
                    <input type="text" class="form-control" id="txt_id" name="txt_id" placeholder="0" disabled>
                      <input type="text" class="form-control" id="txt_carne" name="txt_carne" placeholder="Carne" 
                             pattern="^E\d{3}$" title="Debes coincidir con el formato solicitado, Ejemplo: E001" required>
                    <input type="text" class="form-control" id="txt_nombres" name="txt_nombres" placeholder="Nombres">
                    <input type="text" class="form-control" id="txt_apellidos" name="txt_apellidos" placeholder="Apellidos">
                    <input type="text" class="form-control" id="txt_direccion" name="txt_direccion" placeholder="Direccion">
                    <input type="text" class="form-control" id="txt_telefono" name="txt_telefono" placeholder="Telefono">
                    <input type="text" class="form-control" id="txt_correo_electronico" name="txt_correo_electronico" placeholder="Correo Electronico">
                    <select class="form-control" id="txt_id_tipo_sangre" name="txt_id_tipo_sangre" required>
                      <option value=""><<< Eliga >>></option>
                      <% tiposDeSangre.forEach(function(tipo) { %>
                          <option value="<%= tipo.id_tipo_sangre %>"><%= tipo.nombre %></option>
                      <% }) %>
                  </select>    
                    <input type="date" class="form-control" id="txt_fn" name="txt_fn" placeholder="yyyy-MM-dd">
                   <button type="submit" id="btn_crear" name="btn_crear" class="btn btn-info" value="crear">Agregar</button>
                   <button type="submit" id="btn_actualizar" name="btn_actualizar" class="btn btn-warning" value="actualizar">Modificar</button>
                   <button type="submit" id="btn_borrar" name="btn_borrar" class="btn btn-danger" value="borrar" onclick="return confirmDelete()">Eliminar</button>
                </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-bs-dismiss="modal" aria-label="Close">cerrar</button>
            </div>
          </div>
        </div>
      </div>
      <div class=" table">
        <table class="table table-bordered" id="tabla-estudiantes">
          <thead>
              <tr>
                  <th>Carne</th>
                  <th>Nombres</th>
                  <th>Apellidos</th>
                  <th>Direccion</th>
                  <th>Telefono</th>
                  <th>Correo</th>
                  <th>Sangre</th>
                  <th>Nacimiento</th>
              </tr>
          </thead>
          <tbody>
              <% resultado.forEach((estudiante) => { %>
              <tr data-id="<%= estudiante.id_estudiantes %>"
                  data-carne="<%= estudiante.carne %>"
                  data-nombres="<%= estudiante.nombres %>"
                  data-apellidos="<%= estudiante.apellidos %>"
                  data-direccion="<%= estudiante.direccion %>"
                  data-telefono="<%= estudiante.telefono %>"
                  data-correo="<%= estudiante.correo_electronico %>"
                  data-sangre="<%= estudiante.id_tipo_sangre %>"
                  data-nacimiento="<%= estudiante.fecha_nacimiento %>">
                  <td><%= estudiante.carne %></td>
                  <td><%= estudiante.nombres %></td>
                  <td><%= estudiante.apellidos %></td>
                  <td><%= estudiante.direccion %></td>
                  <td><%= estudiante.telefono %></td>
                  <td><%= estudiante.correo_electronico %></td>
                <td><%= estudiante.id_tipo_sangre %><a>)</a><%= estudiante.tipo_sangre %></td>
                <td><%= estudiante.fecha_nacimiento %></td>
              </tr>
              <% }) %>
          </tbody>
      </table>
  </div>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
